void Scanner(){
  //delay(100);
  PhotoReading=0;
  PhotoReading1=0;
  PhotoReading2=0;
  Average=0;
  digitalWrite(LedPin, HIGH);
  delay(10);
  for(int i = 0 ; i <= 500 ; i++){
    PhotoReading = PhotoReading + analogRead(PhotoPin);
    PhotoReading1 = PhotoReading1 + analogRead(PhotoPin1);
    PhotoReading2 = PhotoReading2 + analogRead(PhotoPin2);
    //AmbientReading = AmbientReading + analogRead(AmbientPin);
    
  }
  PhotoReading = 1000- (PhotoReading/500);
  PhotoReading1 = 1000- (PhotoReading1/500);
  PhotoReading2 = 1000- (PhotoReading2/500);
  //AmbientReading = AmbientReading/500;
  digitalWrite(LedPin, LOW);
  Average = ((PhotoReading + PhotoReading1 + PhotoReading2)/3);
  lcd.setCursor(0, 1);
  lcd.print(Average);
  if (Average < 450){
    PlixNumber = 0;
  }else if (Average >=450 && Average <600){
    PlixNumber = 1;
  }else if (Average >=600){
    PlixNumber = 2;
  }
  return;
}
void ArmsRight(){
  while (stepperB.distanceToGo()!=0){
  stepperB.run();
    
  }
  while (digitalRead(RightEndStopPin) == HIGH){
    stepperB.setSpeed(-45);
    stepperB.setMaxSpeed(-400);
    stepperB.runSpeed();
       
  }
 
  return;
}
void ArmsLeft(){
  while (stepperB.distanceToGo()!=0){
  stepperB.run();
    
  }
  while (digitalRead(LeftEndStopPin) == HIGH){
    stepperB.setSpeed(45);
    stepperB.setMaxSpeed(400);
    stepperB.runSpeed();
       
  }
 
  return;
}

void ArmsCalibrate(){
    lcd.setCursor(0, 0);
    lcd.print("Arms cal begin");
  if (digitalRead(LeftEndStopPin) == LOW){
    digitalWrite(StepPulse, LOW);
    return;
  }
  
  while (digitalRead(LeftEndStopPin) == HIGH){
      //if(read_LCD_buttons() == btnSELECT){
        digitalWrite(DirectionSelect, HIGH);
        digitalWrite(StepPulse, HIGH);
        motorPosition--;
        delayMicroseconds(1000);
        digitalWrite(StepPulse, LOW);
       delayMicroseconds(1000);
       digitalRead(LeftEndStopPin);
  }
  
}


void Menu(){
  delay(200);
  while (reading == LOW){
  if (read_LCD_buttons() == btnUP) {
    //i = 1;
    CurrentScreen --;
    if (CurrentScreen <=0){
      CurrentScreen = 0;
    }
    Parameters();
    delay(100);
  } else if (read_LCD_buttons() == btnDOWN) {
    //i = 2;
    CurrentScreen ++;
    if (CurrentScreen >=3){
      CurrentScreen = 3;
    }
    Parameters();
    delay(100);
  } else if (read_LCD_buttons() == btnLEFT) {
    condition = 1;
    Parameters();
    delay(50);
  } else if (read_LCD_buttons() == btnRIGHT) {
    condition = 2;
    Parameters();
    delay(50);
  } else if (read_LCD_buttons() == btnSELECT) {
    switch (CurrentScreen) {
      case 0:
        EEPROM.write(0, PickHeight);
        if (0 == EEPROM.length()) {
          
        }
        lcd.setCursor(11, 1);
        lcd.print("SAVED");
        delay(100);
      break;
      case 1:
        EEPROM.write(1, MaxHeight);
        if (1 == EEPROM.length()) {
          
        }
        lcd.setCursor(11, 1);
        lcd.print("SAVED");
        delay(100);
      break;
    }
  }reading = digitalRead(SwitchPin);
}}

void Parameters() {
    switch (CurrentScreen) {

      case 0:
        //lcd.clear();
        if (condition == 1) {
          PickHeight--;

        } else if (condition == 2) {
          PickHeight++;

        }
        lcd.clear();
        lcd.setCursor(0, 0);
        lcd.print("Head pick height");
        lcd.setCursor(0, 1);
        lcd.print(PickHeight);

        condition = 0;
        delay(100);
        break;

      case 1:
        if (condition == 1) {
          MaxHeight--;

        } else if (condition == 2) {
          MaxHeight++;

        }
        lcd.clear();
        lcd.setCursor(0, 0);
        lcd.print("Head max height");
        lcd.setCursor(0, 1);
        lcd.print(MaxHeight);

        condition = 0;
        delay(100);
      break;
      case 2:
        lcd.clear();
        lcd.setCursor(0, 0);
        lcd.print("Move arms");
        lcd.setCursor(0, 1);
        lcd.print("Left       Right");
        //lcd.clear();
        if (condition == 1) {
          while (digitalRead(LeftEndStopPin) == HIGH){
            //if(read_LCD_buttons() == btnSELECT){
            digitalWrite(DirectionSelect, HIGH);
            digitalWrite(StepPulse, HIGH);
            motorPosition--;
            delayMicroseconds(1000);
            digitalWrite(StepPulse, LOW);
            delayMicroseconds(1000);
            digitalRead(LeftEndStopPin);
          }
        } else if (condition == 2) {
            while (digitalRead(RightEndStopPin) == HIGH){
              //if(read_LCD_buttons() == btnSELECT){
              digitalWrite(DirectionSelect, LOW);
              digitalWrite(StepPulse, HIGH);
              motorPosition++;
              delayMicroseconds(1000);
              digitalWrite(StepPulse, LOW);
              delayMicroseconds(1000);
              digitalRead(RightEndStopPin);
            }

        }
        
        condition = 0;
        delay(100);
        break;

      case 3:
        lcd.clear();
        lcd.setCursor(0, 0);
        lcd.print("last");
        delay(100);
        break;
    }
  }
