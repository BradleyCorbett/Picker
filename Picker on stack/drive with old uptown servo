void setup()
{
  // pinMode(11, OUTPUT);
  pinMode(SwitchPin, INPUT_PULLUP);
  pinMode(PhotoPin,  INPUT); 
  pinMode(PhotoPin1,  INPUT);
  pinMode(PhotoPin2,  INPUT);
  pinMode(AmbientPin,  INPUT);
  pinMode(LedPin,  OUTPUT);
  pinMode(StepPulse, OUTPUT);
  pinMode(DirectionSelect, OUTPUT);
  pinMode(Enable, OUTPUT);
  pinMode(Signal, OUTPUT);
  pinMode(AirSignal, OUTPUT);
  pinMode(RightEndStopPin, INPUT_PULLUP);
  pinMode(LeftEndStopPin, INPUT_PULLUP);
  pinMode(encoder0PinA, INPUT_PULLUP);
  pinMode(encoder0PinB, INPUT_PULLUP);
  
  ServoNumberFan.write(pos1);                                     /////////////////////
  //NumberUpDn.write(posVert);                                    /////////////////////
  ServoNumberFan.attach(30);                                      /////////////////////
  NumberUpDn.attach(32);                                     /////////////////////

  //Setup LCD
  lcd.begin(16, 2);              // start the library
  lcd.setCursor(0, 0);
  PickHeight = EEPROM.read(0);
  MaxHeight = EEPROM.read(1);

  //setup motors
  interface.begin(baudrate);
  delay(100);

  Serial.begin(9600);
  digitalWrite(Enable, HIGH);
  digitalWrite(Signal, HIGH);
  digitalWrite(AirSignal, HIGH);

  // check if we can communicate with the motor
  // if not, we turn the led on and stop here
  uint8_t status = motor1.init();
  if (status != DYN_STATUS_OK)
  {
    pinMode(LED_BUILTIN, OUTPUT);
    digitalWrite(LED_BUILTIN, LOW);
    lcd.setCursor(0, 0);
    lcd.print("M1 not talking");
    while (1);
  }

  uint8_t status1 = motor2.init();
  if (status1 != DYN_STATUS_OK)
  {
    pinMode(LED_BUILTIN, OUTPUT);
    digitalWrite(LED_BUILTIN, LOW);
    lcd.setCursor(0, 1);
    lcd.print("M2 not talking");
    while (1);
  }


  motor1.enableTorque();
  motor2.enableTorque();

  // set to joint mode, with a 180Â° angle range
  // see robotis doc to compute angle values
  motor1.jointMode(204, 820);
  motor2.jointMode(204, 820);
  
  FanCalabrate();
  movef(NumberUpDn, event,50,5,5,MaxHeight,MaxHeight-10);
  delay(ramp);
  //VertMid();
  WingFlat();
}

void loop()

{
  //lcd.setCursor(14, 0);
  //lcd.print(CurrentState);

  switch (CurrentState) {
    /////////////////////////
case 0:
      ArmsCalibrate();
      lcd.setCursor(0, 0);
      lcd.print("Arms Calibrated");
      CurrentState = 10;
      //delay(500);
    break;
    
    case 10:
    FanOff();
      lcd.clear();
      lcd.setCursor(0, 0);
      lcd.print("waiting for switch");
      CurrentState = 20;
    break;
    
    case 20:
     //Wait for switch
     
     
      reading = digitalRead(SwitchPin);
      
      
      if(reading == HIGH){
        FanHigh();
        
        
        delay(100);
        
      //if(read_LCD_buttons() == btnSELECT){
        lcd.setCursor(0, 0);
        lcd.print("Begining");
        CurrentState = 100;
        //delay(400);
      }else if (read_LCD_buttons() == btnSELECT) {
        lcd.clear();
        lcd.setCursor(0, 0);
        lcd.print("------MENU------");
        Menu();
      }
        
    break;
    
    

    case 100:
      //Go to pickup
      y = 0;
      WiggleDown = 555;
      WiggleUp = 590;
      
      digitalWrite(AirSignal, HIGH);
      
      movef(NumberUpDn, event,500,5,25,MaxHeight-10,PickHeight);
      delay(300);
      movef(NumberUpDn, event,500,40,25,PickHeight,MaxHeight-10);
      
      //delay(50);
      FanHold();
      CurrentState = 200;
    break;
    
    case 200:
      //Start scanning sequence
      lcd.setCursor(0, 0);
      lcd.print("Chosing");
      
      FanHold();
      //delay(200);
      Scanner();
      //delay(200);
      
      if (PlixNumber ==0){
        lcd.setCursor(0, 0);
        lcd.print("zero");
        CurrentState = 10;
      }else if (PlixNumber == 1){
        lcd.setCursor(0, 0);
      lcd.print("one");
        CurrentState = 600;
      }else if (PlixNumber > 1){
        if (y<4){
          lcd.setCursor(0, 0);
          lcd.print("more than one");
          CurrentState = 300;
        }else if (y >= 4){
          CurrentState = 700;
          lcd.setCursor(0, 0);
          lcd.print("giving up");
        }
        
        
      } //delay(500);
    break;
    
    

   case 300:
      lcd.setCursor(6, 1);
      lcd.print(y);
      FanMid();
      WingDown();
      delay(500);
      if ( motor1inposition() &&  motor2inposition()) { /////////////this if checks if wing movement is done
        CurrentState = 400;
      } 
   break;

   case 400:
         WingUp();
         delay(500);
      if ( motor1inposition() &&  motor2inposition()) { /////////////this if checks if wing movement is done
        CurrentState = 500;
      }
    break;

   case 500:
      //Finish Seperating
      WingFlat();
      if ( motor1inposition() &&  motor2inposition()) { /////////////this if checks if wing movement is done
        CurrentState = 200;
        //delay(200);
        y++;
        WiggleDown = WiggleDown - 25;
        WiggleUp = WiggleUp + 10;
        delay(300);
        lcd.setCursor(0, 0);
        lcd.print("end of flex");
      } 
   break;

   case 600:
      movef(NumberUpDn, event,5,5,5,MaxHeight-10,MaxHeight);
      FanHold();
      //delay(500);
      
      CurrentState = 700; 
   break;

   case 700:
    stepperB.setMaxSpeed(-MaxSpeed);
    stepperB.setCurrentPosition(0);
    stepperB.setAcceleration(Acceleration);
    stepperB.moveTo(-3000);
    stepperB.setSpeed(-MaxSpeed);
    //move to other side
    ArmsRight();
    
    lcd.setCursor(0, 0);
    lcd.print("Moving to drop off");
    //delay(500);
    CurrentState = 710;
   break;
   
   case 710:
    Scanner();
    
    if (PlixNumber == 0){
      lcd.setCursor(0, 0);
      lcd.print("Nothing try again");
      CurrentState = 910;
    }else if (PlixNumber >= 1){
      CurrentState = 800;
    }
    
   break;
   
   case 800:
    
    movef(NumberUpDn, event,5,5,5,MaxHeight,MaxHeight-10);
    lcd.setCursor(0, 0);
    lcd.print("Waiting for conveyer");
    //delay(500);
    movef(NumberUpDn, event,5,5,5,MaxHeight-10,MaxHeight-20);//drop off height. might need a seperate varible
    FanOff();
    FanReverse();
    digitalWrite(Signal, LOW);
    delay(200);
    digitalWrite(Signal, HIGH);
    CurrentState = 900;
   break;
   
   case 900:
   
    movef(NumberUpDn, event,5,5,5,MaxHeight-20,MaxHeight);
    FanOff();
    CurrentState = 910;
    
   break;
   
   case 910:
    stepperB.setMaxSpeed(MaxSpeed);
    stepperB.setCurrentPosition(0);
    stepperB.setAcceleration(Acceleration);
    stepperB.moveTo(3000);
    stepperB.setSpeed(MaxSpeed);
    ArmsLeft();
    CurrentState = 1000;
    //delay(500);
   break;

   case 1000:
     //Wait for button so can check plix pickup
      //lcd.setCursor(0, 0);
      //lcd.print(reading);
      reading = digitalRead(SwitchPin);
      
      if(reading == HIGH){
        FanOff();
        //lcd.setCursor(0, 0);
        //lcd.print(reading);
        delay(10);
       CurrentState = 1100;
      }
      if(reading == LOW){
        FanOff();
        //lcd.setCursor(0, 0);
        //lcd.print(reading);
        delay(10);
        CurrentState = 10;
        
      }
   break;
   
   case 1100:
     FanOff();
     CurrentState = 10;
   break;

    
}
}



////////////////////////////// function's  //////////////////////////
int servoMove(int angle1, int angle2, Servo servoNumber, int servoSpeed) {

  if (angle1 >= angle2) {
    for (pos = angle1 ; pos >= angle2  ; pos -= 1 )
    { servoNumber .write(pos);
      delay(  servoSpeed );
    }
  }

  if (angle1 <= angle2) {
    for (pos = angle1 ; pos <= angle2  ; pos += 1 )
    { servoNumber .write(pos);
      delay(  servoSpeed );
    }
  }
  return angle2;
}

void FanCalabrate() {
  posFan = 89;
  ServoNumberFan.write(89);
  lcd.setCursor(0, 0);
  lcd.print("Fan cal");
  delay(2000);
}
void FanOff() {
   posFan = servoMove(posFan , 89,ServoNumberFan , 0 );
   lcd.setCursor(0, 0);
   lcd.print("      Fan off");
  //  delay(5000);

}
void FanReverse() {
   posFan = servoMove(posFan , 78,ServoNumberFan , 0 );
   lcd.setCursor(0, 0);
   lcd.print("      Fan Reverse");
  //  delay(5000);

}

void FanHold() {
   posFan = servoMove(posFan , 97,ServoNumberFan , 0 );
   lcd.setCursor(0, 0);
   lcd.print("      Fan Hold");
  //  delay(5000);

}                                                  /////////////////////
void FanMid() {
   posFan = servoMove(posFan , 100,ServoNumberFan , 0 );
   lcd.setCursor(0, 0);
   lcd.print("      Fan Mid");
  //  delay(5000);

}                                                    /////////////////////
void FanHigh() {
   posFan = servoMove(posFan , 110,ServoNumberFan , 0 );
   lcd.setCursor(0, 0);
   lcd.print("      Fan idle");
  //  delay(5000);

}                                                   /////////////////////




